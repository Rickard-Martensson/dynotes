{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./src"
        ],
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "module": "ES2022",
        "outDir": "./static/js",
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": [
        "src/**/*"
    ]
}